{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "../../src/**/*"
  ],
  "exclude": [
    "../../test.ts",
    "../../src/test/**/*",
    "../../src/**/test/*",
    "../../src/**/*.test.ts"
  ]
}
